{% extends 'base.html.twig' %}

{% block title %}Villes{% endblock %}

{% block body %}
   <div class="conatiner">
        <div class="row justify-content-center">
            <div class="col-10">
                <h1> LISTE DES VILLES</h1>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Ville</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ville in villes %}
                            <tr>
                                <td>{{ ville|upper }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
   </div>

    

    


{% endblock %}
